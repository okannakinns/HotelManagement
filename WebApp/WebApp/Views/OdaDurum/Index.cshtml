@using WebApp.Models;
@model List<WebApp.Models.OdaDurum>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-4">
                <section class="panel">
                    <header class="panel-heading">
                        Oda Durumu (@Model.Count() Adet Kayıt Bulunmaktadır)
                    </header>
                    <div class="panel-body">
                        <form method="post" action="@Url.Action("Ekle", "OdaDurum")" class="form-inline">
                            <div class="form-group col-md-8">
                                <label for="Adi">Adı</label>
                                <input type="text" class="form-control" id="Adi" name="Adi">
                            </div>
                            
                           
                            <div class="form-group col-md-12">
                                <button style="margin-top:15px;" type="submit" class="btn btn-info">Ekle</button>
                            </div>
                        </form>
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div style="margin-top:10px;" class="alert alert-block alert-danger fade in">
                                <button data-dismiss="alert" class="close close-sm" type="button">
                                    <i class="icon-remove"></i>
                                </button>
                                <strong>Hata!</strong> @ViewBag.ErrorMessage
                            </div>
                        }
                    </div>
                </section>
            </div>
        </div>
    </section>


    <section class="panel">

        <table class="table table-striped">
            <thead>
                <tr>

                    <th>Adı</th>
                    

                </tr>
            </thead>
            <tbody>
                @foreach (var durum in Model)
                {
                    <tr>

                        <td>@durum.Adi</td>
                       

                        <td>
                            <form method="post" action="@Url.Action("Update", "OdaDurum")" style="display: inline;">
                                <input type="hidden" name="id" value="@durum.Id" />
                                <button type="submit" class="btn btn-primary btn-xs"><i class="icon-pencil"></i></button>
                            </form>
                            <form method="post" action="@Url.Action("Sil", "OdaDurum")" style="display: inline;">
                                <input type="hidden" name="id" value="@durum.Id" />
                                <button type="submit" class="btn btn-danger btn-xs" onclick="confirmSilme(event)"><i class="icon-trash"></i></button>
                            </form>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </section>
</section>
