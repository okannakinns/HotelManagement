@using WebApp.Models;
@model Fiyat

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-6">
                <section class="panel">
                    <header class="panel-heading">
                        Fiyat 
                    </header>
                    <div class="panel-body">
                        <form method="post" action="@Url.Action("DoUpdate", "Fiyat")">
                            <div class="form-row">
                               
                                    <input type="hidden" class="form-control" id="Id" name="Id" value="@Model.Id">
                                <div class="form-group col-md-5">
                                    <label for="Adi">Oda</label>
                                    <select name="OdalarId" class="form-control" id="OdalarId">
                                        @foreach (var oda in ViewBag.Odalar)
                                        {
                                            <option value="@oda.Id" @(oda.Id == Model.OdalarId ? "selected" : "")>@oda.Adi</option>
                                        }
                                    </select>
                                </div>

                               
                                <div class="form-group col-md-5">
                                    <label for="Tutar">Tutar</label>
                                    <input type="text" class="form-control" id="Tutar" name="Tutar" value="@Model.Tutar" maxlength="6" onkeypress="return event.charCode >= 48 && event.charCode <= 57">
                                </div>


                                <div class="form-group col-md-5">
                                    <label for="BaslangicTarihi">Başlangıç Tarihi</label>
                                    <input type="text" class="form-control" id="BaslangicTarihi" name="BaslangicTarihi" value="@Model.BaslangicTarihi">
                                </div>
                                <div class="form-group col-md-5">
                                    <label for="BitisTarihi">Bitiş Tarihi</label>
                                    <input type="text" class="form-control" id="BitisTarihi" name="BitisTarihi" value="@Model.BitisTarihi">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-10">
                                    <label for="Aciklama">Açıklama</label>
                                    <textarea class="form-control" id="aciklama" name="Aciklama" rows="3" maxlength="130">@Model.Aciklama</textarea>
                                </div>
                                <input type="hidden" class="form-control" id="Durumu" name="Durumu" value="@Model.Durumu">
                                <input type="hidden" class="form-control" id="EklenmeTarihi" name="EklenmeTarihi" value="@Model.EklenmeTarihi">
                                <input type="hidden" class="form-control" id="GuncellenmeTarihi" name="GuncellenmeTarihi" value="@Model.GuncellenmeTarihi">
                            </div>
                            <div class="form-group col-md-6">
                                <button type="submit" class="btn btn-info">Güncelle</button>
                            </div>
                        </form>
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div style="margin-top:10px;" class="alert alert-block alert-danger fade in">
                                <button data-dismiss="alert" class="close close-sm" type="button">
                                    <i class="icon-remove"></i>
                                </button>
                                <strong>Hata!</strong> @ViewBag.ErrorMessage
                            </div>
                        }


                    </div>
                </section>
            </div>
            <div class="col-lg-5">
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div style="margin-top:10px;" class="alert alert-block alert-danger fade in">
                        <button data-dismiss="alert" class="close close-sm" type="button">
                            <i class="icon-remove"></i>
                        </button>
                        <strong>Hata!</strong> @ViewBag.ErrorMessage
                    </div>
                }
            </div>
        </div>
    </section>
</section>